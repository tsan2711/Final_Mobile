<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Icon Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/info_light">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_lock"
                android:padding="20dp"
                android:tint="@color/info_color"
                android:contentDescription="Xác thực OTP" />
        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận OTP"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mã OTP 6 chữ số đã được gửi đến email của bạn"
            android:textSize="14sp"
            android:textColor="@color/secondary_text_color"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Email Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_transaction_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/info_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        android:tint="@color/info_color"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Email" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã OTP đã được gửi đến"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_text_color"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_transaction_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="15sp"
                    android:textColor="@color/info_color"
                    android:textStyle="bold"
                    android:paddingStart="30dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- OTP Input Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- OTP Input Field with Enhanced Design -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mã OTP"
                app:hintTextColor="@color/secondary_text_color"
                app:boxStrokeColor="@color/info_color"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:boxCornerRadiusTopStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/info_color"
                app:boxBackgroundColor="@color/background_color"
                app:helperText="Mã OTP có 6 chữ số"
                app:helperTextTextColor="@color/tertiary_text_color"
                app:helperTextEnabled="true"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:inputType="number"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color"
                    android:gravity="center"
                    android:maxLength="6"
                    android:letterSpacing="0.3"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@android:color/transparent"
                    android:selectAllOnFocus="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Confirm Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Xác nhận"
                android:textColor="@color/text_on_primary"
                android:backgroundTint="@color/info_color"
                android:textSize="17sp"
                android:textStyle="bold"
                android:elevation="6dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="16dp" />

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Hủy"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:strokeColor="@color/divider_color"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
