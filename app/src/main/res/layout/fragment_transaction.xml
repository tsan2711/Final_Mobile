<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_fragment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_fragment_label"
            android:textColor="@color/primary_text_color"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý các giao dịch của bạn"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="0dp">

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Chuyển tiền"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_transfer_money"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:background="@drawable/gradient_blue"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btn_deposit"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Nạp tiền"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_credit_card"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:background="@drawable/gradient_secondary"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch sử giao dịch"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Bộ lọc"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_filter"
            android:drawablePadding="4dp"
            android:drawableTint="@color/primary_color"
            android:background="@drawable/button_outline_primary" />

    </LinearLayout>

    <!-- Transaction List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Transactions Container (Dynamic) -->
            <LinearLayout
                android:id="@+id/ll_transactions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tv_no_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có giao dịch nào"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- Load More Button -->
            <Button
                android:id="@+id/btn_load_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem thêm giao dịch"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:textColor="@color/primary_color"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
